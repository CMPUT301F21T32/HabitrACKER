<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:paddingHorizontal="5dp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:paddingHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:paddingTop="20dp"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:id="@+id/full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Full Name" />

                <TextView
                    android:id="@+id/username"
                    android:textSize="8pt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-@username" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#3870FF"
                    android:text="Edit Profile"
                    app:cornerRadius="10dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingHorizontal="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/followers_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#3870FF"
                android:layout_weight="1"
                android:text="Followers"
                android:layout_marginRight="10dp"
                app:cornerRadius="10dp"/>

            <Button
                android:id="@+id/following_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#3870FF"
                android:layout_weight="1"
                android:text="Following"
                android:layout_marginLeft="10dp"
                app:cornerRadius="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingHorizontal="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/finished_habit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#3870FF"
                android:layout_weight="1"
                android:text="Finished Habits"
                android:layout_marginRight="10dp"
                app:cornerRadius="10dp"/>

            <Button
                android:id="@+id/add_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#3870FF"
                android:layout_weight="1"
                android:text="Add Habit"
                android:layout_marginLeft="10dp"
                app:cornerRadius="10dp"
                android:onClick="addHabit"/>

        </LinearLayout>

        <ListView
            android:id="@id/habit_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/cell_content"
            android:layout_weight="1"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>